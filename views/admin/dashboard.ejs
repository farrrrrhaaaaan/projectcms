<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/style.css">
</head>
<body>
    <%- include('../../partials/admin/header.ejs')%>
        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../../partials/admin/left.ejs')%>
                    <div class="col-md-9">
                        <h3 class="text-center text-primary mt-2">Change Password</h3>
                        <%if(message){%>
                        <div class="text-center text-danger fw-bold">Password <%=message%></div>
                        <%}%>
                        <div id="error" class="text-center text-danger fw-bold"></div>
                        <form action="" method="post" onsubmit=" return handleForm();">
                            <label for="/admin/dashboard" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" value="<%= adminrecord.username%>" disabled>
                            <label for="" class="form-label">Old Password</label>
                            <input type="password" name="oldpass" id="oldpass" class="form-control">
                            <label for="" class="form-label">New Password</label>
                            <input type="password" name="newpass" id="newpass" class="form-control">
                            <label for="" class="form-label">Confirm Password</label>
                            <input type="password" name="confirmpass" id="confirmpass" class="form-control">
                            <button type="submit" class="form-control btn btn-success mt-3 mb-2">Change Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
       <%- include('../../partials/admin/footer.ejs')%>
       <script>
        function handleForm(){
            let username=document.getElementById('username').value;
            let newpass=document.getElementById('newpass').value;
            let oldpass=document.getElementById('oldpass').value;
            let confirmpass=document.getElementById('confirmpass').value;

            if(username==''){
                document.getElementById('error').innerText='Please enter Username';
                document.getElementById('username').style.border='1px solid red';
                return false;
            }
           
            else if(oldpass==''){
                document.getElementById('error').innerText='Please enter Old Password'
                document.getElementById('oldpass').style.border='1px solid red';
                return false;
            }
            else if(newpass==''){
                document.getElementById('error').innerText='Please enter New Password'
                document.getElementById('newpass').style.border='1px solid red';
                return false;
            }
            else if(confirmpass==''){
                document.getElementById('error').innerText='Please enter Confirm Password'
                document.getElementById('confirmpass').style.border='1px solid red';
                return false;
            }
            else if(newpass!==confirmpass){
                document.getElementById('error').innerText='Password not matching'
                document.getElementById('confirmpass').style.border='1px solid red';
                return false;
            }
        }
       </script>
</body>
</html>