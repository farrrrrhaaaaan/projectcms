<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title%>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/style.css">
</head>

<body>
    <%- include('../../partials/admin/header.ejs')%>
        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../../partials/admin/left.ejs')%>
                        <div class="col-md-9">
                            <%if(message){%>
                            <div class="text-danger text-center"><%=message%></div>
                            <%}%>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>UserName</th>
                                    <th>Status</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                                <% if(queryRecords.length!==0){queryRecords.forEach((result)=>{ %>
                                    <tr>
                                        <td>
                                            <%=result.username %>
                                        </td>
                                        <td>
                                            <a href="/admin/statuschange/<%=result.id%>"><button class="btn btn-primary">
                                                    <%=result.status %>
                                                </button></a>

                                        </td>
                                        <td>

                                            <a href="/admin/rolechange/<%=result.id%>"><button class="btn btn-success">
                                                    <%=result.role %> %>
                                                </button></a>

                                        </td>
                                        <td><a href="/admin/deleteuser/<%=result.id%>"><button class="btn btn-danger">Delete</button></a>
                                        </td>

                                    </tr>
                                    <%})}else{%>
                                    <tr>
                                        <td colspan="4" class="text-center text-primary">No Record Found</td>
                                    </tr>
                                    <%}%>
                            </table>
                        </div>
                </div>
            </div>
        </section>
        <%- include('../../partials/admin/footer.ejs')%>
</body>

</html>