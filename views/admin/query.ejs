<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title%>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/style.css">
</head>

<body>
    <%- include('../../partials/admin/header.ejs')%>
        <section id="mid">
            <div class="container">
                <div class="row">
                    <%- include('../../partials/admin/left.ejs')%>
                        <div class="col-md-9">
                            <%if(message){%>
                            <div class="text-center text-danger"><%=message%></div>
                            <%}%>
                            <h2 class="text-center">Query</h2>
                            <div>
                                <form action="/admin/querySearch" method="post">
                                    <label for="" class="form-label">Select One Option</label>
                                    <select name="search" id="" class="form-control">
                                        <option value="read">READ</option>
                                        <option value="unread">Unread</option>
                                    </select>
                                    <br>
                                    <button type="submit" class="btn btn-primary form-control">Search</button>
                                </form>
                            </div>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Query</th>
                                    <th>Action</th>
                                    <th>Action 2</th>
                                </tr>
                                <% if(queryRecords.length!==0){queryRecords.forEach((result)=>{ %>
                                    <tr>
                                        <td>
                                            <%=result.name %>
                                        </td>
                                        <td>
                                            <%=result.email %>
                                        </td>
                                        <td>
                                            <%=result.query %>
                                        </td>
                                        <td><a href="/admin/queryupdate/<%=result._id %>">
                                                <%=result.status %>
                                            </a></td>
                                        <td><a href="/admin/querydelete/<%=result._id %>">
                                                <button class="btn btn-danger">Delete</button>
                                            </a></td>
                                    </tr>
                                    <%})}else{%>
                                        <tr>
                                            <td colspan="5" class="text-center text-primary">No Records Found</td>
                                        </tr>
                                        <%}%>
                            </table>
                        </div>
                </div>
            </div>
        </section>
        <%- include('../../partials/admin/footer.ejs')%>
</body>

</html>