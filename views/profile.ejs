<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <link href="https://fonts.googleapis.com/css2?family=Smokum&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- header Start-->
  <%- include('../partials/header.ejs') %>
  <!--header end-->
  <section id="banner">
    <img src="/media/border1.png" alt="" class="banner-border-img">
  </section>
  
  <section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
             <h2 class="text-primary text-center"><%=username%>'s Profile</h2><div id="profile"><img class="d-block mx-auto" src="/upload/<%=userRecord.img%>" alt=""></div>
                <div id="error" class="text-center text-danger fw-bold"></div>
                        <form action="/profileupdate/<%=userRecord.id%>" method="post" enctype="multipart/form-data" onsubmit=" return handleForm();">
                            <label for="" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" disabled value="<%=userRecord.userName%>">
                            <label for="" class="form-label">First Name</label>
                            <input type="text" name="firstname" id="firstname" class="form-control" value="<%=userRecord.firstName%>">
                            <label for="" class="form-label">Last Name</label>
                            <input type="text" name="lastname" id="lastname" class="form-control" value="<%=userRecord.lastName%>">
                            <label for="" class="form-label">Email</label>
                            <input type="text" name="email" id="email" class="form-control" value="<%=userRecord.email%>">
                            <label for="">Profile Picture</label>
                            <input type="file" name="img" id="" class="form-control">
                            <button type="submit" class="form-control btn btn-success mt-3 mb-2">Update Profile</button>
                        </form>
            </div>
        </div>
    </div>
        
  </section>


  <!-- Footer Start-->
  <%- include('../partials/footer.ejs')%>
  <!--Footer end-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
    <script>
      function handleForm(){
          let username=document.getElementById('username').value;
          let newpass=document.getElementById('newpass').value;
          let oldpass=document.getElementById('oldpass').value;
          let confirmpass=document.getElementById('confirmpass').value;

          if(username==''){
              document.getElementById('error').innerText='Please enter Username';
              document.getElementById('username').style.border='1px solid red';
              return false;
          }
         
          else if(oldpass==''){
              document.getElementById('error').innerText='Please enter Old Password'
              document.getElementById('oldpass').style.border='1px solid red';
              return false;
          }
          else if(newpass==''){
              document.getElementById('error').innerText='Please enter New Password'
              document.getElementById('newpass').style.border='1px solid red';
              return false;
          }
          else if(confirmpass==''){
              document.getElementById('error').innerText='Please enter Confirm Password'
              document.getElementById('confirmpass').style.border='1px solid red';
              return false;
          }
          else if(newpass!==confirmpass){
              document.getElementById('error').innerText='Password not matching'
              document.getElementById('confirmpass').style.border='1px solid red';
              return false;
          }
      }
     </script>
</body>

</html>